{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "type-check": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": [
        "wasm-pack"
      ],
      "cache": false,
      "persistent": true
    },
    "//#dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [],
      "inputs": [
        "**/*.rs",
        "**/*.toml"
      ]
    },
    "wasm-pack": {
      "cache": false,
      "dependsOn": [],
      "outputs": [
        "pkg/**"
      ],
      "inputs": [
        "cryptfns/**/*.rs",
        "cryptfns/**/*.toml"
      ]
    },
    "test:unit": {
      "dependsOn": [
        "^wasm-pack"
      ],
      "cache": false
    },
    "//#test:unit": {
      "dependsOn": []
    },
    "test:e2e": {
      "dependsOn": [
        "^wasm-pack"
      ],
      "cache": false
    },
    "test:watch": {
      "dependsOn": [
        "^wasm-pack"
      ],
      "cache": false,
      "persistent": true
    },
    "//#test:watch": {
      "dependsOn": [],
      "cache": false,
      "persistent": true
    },
    "release": {
      "dependsOn": [
        "^wasm-pack"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "//#release": {
      "dependsOn": [],
      "inputs": [
        "**/*.rs",
        "**/*.toml"
      ],
      "outputs": [
        "target/release/hoodik",
        "target/release/hoodik.*"
      ]
    },
    "lint": {}
  }
}